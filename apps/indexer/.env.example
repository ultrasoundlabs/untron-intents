# DB inside docker-compose
DATABASE_URL=postgres://postgres:postgres@db:5432/untron

# Export OTLP to the local collector (set OTEL_DISABLED=1 to disable exporters entirely).
OTEL_EXPORTER_OTLP_ENDPOINT=http://otelcol:4317

# Default streams point at RPCs running on your host machine.
# - macOS/Windows: host.docker.internal works by default
# - Linux: `infra/docker-compose.yml` includes extra_hosts to make it work
POOL_RPC_URLS=http://host.docker.internal:8545
POOL_CHAIN_ID=42161
POOL_CONTRACT_ADDRESS=0xc6Ba8adBF3579607E23129a2D935de4E5bAEeCad
POOL_DEPLOYMENT_BLOCK=0

# Optional tuning (defaults shown here)
# POOL_CONFIRMATIONS=0
# POOL_POLL_INTERVAL_SECS=1
# POOL_CHUNK_BLOCKS=2000
# POOL_REORG_SCAN_DEPTH=256

# Forwarder index contract address (used for every entry in FORWARDERS_CHAINS unless overridden).
FORWARDER_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# JSON array of forwarder chains to index.
# Each entry:
# - chainId (number)
# - forwarderDeploymentBlock (number)
# - rpcs (array of URLs)
# Optional per-entry overrides:
# - forwarderContractAddress (0x...)
# - confirmations, poll_interval_secs, chunk_blocks, reorg_scan_depth
FORWARDERS_CHAINS=[{"chainId": 42162, "forwarderDeploymentBlock": 123, "rpcs": ["http://host.docker.internal:8546"]}]

# Optional defaults for forwarders (used if not set per entry)
# FORWARDER_CONFIRMATIONS=0
# FORWARDER_POLL_INTERVAL_SECS=1
# FORWARDER_CHUNK_BLOCKS=2000
# FORWARDER_REORG_SCAN_DEPTH=256

INDEXER_PROGRESS_TAIL_LAG_BLOCKS=10
